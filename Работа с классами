internal class Program
{
    private static void Main(string[] args)
    {
        string namePlayer = "";

        int healthPlayer = 0;
        int armorPlayer = 0;
        int damagePlayer = 0;


        Console.Write("Введите имя игрока: ");
        namePlayer = Console.ReadLine();

        Console.Write("Введите количество здоровья: ");
        healthPlayer = Convert.ToInt32(Console.ReadLine());

        Console.Write("Введите количество брони: ");
        armorPlayer = Convert.ToInt32(Console.ReadLine());

        Console.Write("Введите количество урона: ");
        damagePlayer = Convert.ToInt32(Console.ReadLine());

        Player player = new Player(namePlayer, healthPlayer, armorPlayer, damagePlayer);

        player.ShowInfoPlayer();
        Console.ReadKey();
    }
}

class Player
{
    public string Name;
    public int Health; 
    public int Armor;
    public int Damage;

    public Player (string name, int health, int armor, int damage)
    {
        Name = name;
        Health = health;
        Armor = armor;
        Damage = damage;
    }

    public void ShowInfoPlayer()
    {
        Console.WriteLine($"\nИгрок с именем - {Name}, имеет следующие параметры:\n");
        Console.WriteLine($"Здоровье - {Health} единиц\nБроня - {Armor} единиц\nУрон - {Damage} единиц");
    }
}
